package com.mobilestore.spring.controller;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import javax.persistence.EntityNotFoundException;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.mobilestore.spring.model.UserAccount;
import com.mobilestore.spring.repository.UserRepository;

@Controller
public class MainController {
	@Autowired
	UserRepository userRepository;
	
	@GetMapping("/login")
	public String login(Model model) {
		model.addAttribute("user", new UserAccount());
		return "login";
	}
	
	@PostMapping("/login")
	public String login(Model model, @ModelAttribute("user") UserAccount userFromRq) {
		UserAccount user = userRepository.getById(userFromRq.getUsername());
		System.out.println("logging in");
//		if (user == null) {
//			System.out.print("null");
//			return "login";
//		}
//		else if (user.getPassword() != userFromRq.getPassword())
//			return "login";
//		else
//			return "abc";
		try {
			System.out.println(user == null);
			System.out.println(user.getAcctype());
		} catch (EntityNotFoundException e) {
			System.out.println("That username does not exist in DB");
		}
		return "login";
	}
}
